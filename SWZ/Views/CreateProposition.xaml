<Page
    x:Class="SWZ.Views.CreateProposition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SWZ.Views"
    xmlns:viewmodel="using:SWZ.ViewModels"
    xmlns:view="using:SWZ.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Stretch"></Setter>
            <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
            <Setter Property="Padding" Value="0"></Setter>
        </Style>

        <DataTemplate x:Key="Header">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="80"></ColumnDefinition>
                    <ColumnDefinition Width="1*" MinWidth="200"></ColumnDefinition>
                    <ColumnDefinition Width="1*" MinWidth="30"></ColumnDefinition>
                    <ColumnDefinition Width="1*" MinWidth="30"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Text="Kod"></TextBlock>
                <TextBlock Grid.Column="1" Text="Nazwa"></TextBlock>
                <TextBlock Grid.Column="2" Text="ECTS"></TextBlock>
                <TextBlock Grid.Column="3" Text="ZZU"></TextBlock>
            </Grid>
        </DataTemplate>


        <DataTemplate x:Key="Course" x:DataType="viewmodel:CourseViewModel">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="80"></ColumnDefinition>
                    <ColumnDefinition Width="1*" MinWidth="200"></ColumnDefinition>
                    <ColumnDefinition Width="1*" MinWidth="30"></ColumnDefinition>
                    <ColumnDefinition Width="1*" MinWidth="30"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind Code}" Grid.Column="0"></TextBlock>
                <TextBlock Text="{x:Bind Name}" Grid.Column="1"></TextBlock>
                <TextBlock Text="{x:Bind ECTS}" Grid.Column="2"></TextBlock>
                <TextBlock Text="{x:Bind ZZU}" Grid.Column="3"></TextBlock>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="CoursesGroup" x:DataType="viewmodel:CoursesGroupViewModel">
            <Grid HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="80"></ColumnDefinition>
                    <ColumnDefinition Width="1*" MinWidth="200"></ColumnDefinition>
                    <ColumnDefinition Width="1*" MinWidth="30"></ColumnDefinition>
                    <ColumnDefinition Width="1*" MinWidth="30"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind Code}" Grid.Column="0"></TextBlock>
                <TextBlock Text="{x:Bind Name}" Grid.Column="1"></TextBlock>
                <TextBlock Text="{x:Bind ECTS}" Grid.Column="2"></TextBlock>
                <TextBlock Text="{x:Bind ZZU}" Grid.Column="3"></TextBlock>

                <ListView ItemsSource="{x:Bind Courses}" IsHitTestVisible="False" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch">

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodel:CourseViewModel">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" MinWidth="80"></ColumnDefinition>
                                    <ColumnDefinition Width="1*" MinWidth="80"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Bind Code}" Grid.Column="0"></TextBlock>
                                <TextBlock Text="{x:Bind Type}" Grid.Column="1"></TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </DataTemplate>

        <viewmodel:CourseDataTemplateSelector x:Key="Selector"
                                              Course="{StaticResource Course}"
                                              CoursesGroup="{StaticResource CoursesGroup}"></viewmodel:CourseDataTemplateSelector>
    </Page.Resources>



    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button Grid.Row ="0" Style="{StaticResource NavigationBackButtonNormalStyle}" Command="{x:Bind ViewModel.GoBack}"/>
        <TextBlock HorizontalAlignment="Right" Text="{x:Bind ViewModel.LoggedUserName}" />
        
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="50">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Wydział:" />
                    <TextBox Text="{x:Bind ViewModel.SearchFaculty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="0,10" VerticalAlignment="Top" Height="30" Width="250"/>
                    <TextBlock Text="Kierunek studiów"/>
                    <TextBox HorizontalAlignment="Left" Margin="0,10" Text="{x:Bind ViewModel.SearchFieldOfStudy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Height="30" Width="250" />
                    <TextBlock Text="Kierunek studiów"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Stacjonarne"  IsChecked="{x:Bind ViewModel.Type0, Mode=TwoWay}"></RadioButton>
                        <RadioButton Content="Niestacjonarne" ></RadioButton>
                    </StackPanel>
                    <TextBlock Text="Język studiów"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="polski" IsChecked="{x:Bind ViewModel.Lang0, Mode=TwoWay}"></RadioButton>
                        <RadioButton Content="angielski" ></RadioButton>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="Kod kursu:" />
                    <TextBox HorizontalAlignment="Left" Margin="0,10" Text="{x:Bind ViewModel.SearchCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Height="30" Width="250"/>
                    <TextBlock Text="Nazwa kursu"/>
                    <TextBox HorizontalAlignment="Left" Margin="0,10" Text="{x:Bind ViewModel.SearchName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Height="30" Width="250"/>
                    <TextBlock Text="Forma kursu:"/>
                    <ComboBox HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch" 
                              x:Name="SearchCourseType"
                              SelectedIndex="{x:Bind ViewModel.SelectedCourseType, Mode=TwoWay}">
                    </ComboBox>
                    


                </StackPanel>
            </StackPanel>
            <StackPanel Margin="50,0,50,0">
                <TextBlock Text="Kurs:"></TextBlock>
                <ListView x:Name="Courses" ItemsSource="{x:Bind ViewModel.Courses}" Height="200" 
                          SelectedIndex="{x:Bind ViewModel.SelectedCourseIndex, Mode=TwoWay}" 
                          ItemContainerStyle="{StaticResource ListViewItemStyle}"
                          ItemTemplateSelector="{StaticResource Selector}"
                          HeaderTemplate="{StaticResource Header}">


                </ListView>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Proponowane zamienniki:"></TextBlock>
                    <Button Content="Dodaj kurs" Command="{x:Bind Path=ViewModel.GoToAddCourseToProposition}"></Button>
                    <Button  Content="Usuń" Command="{x:Bind Path=ViewModel.DeleteCourse}" CommandParameter="{x:Bind ViewModel.CanDelete, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></Button>
                </StackPanel>

                <ListView x:Name="AddedCourses" ItemsSource="{x:Bind ViewModel.AddedCourses}" Height="200" 
                          SelectedIndex="{x:Bind ViewModel.SelectedReplacementCourse, Mode=TwoWay}" 
                          ItemContainerStyle="{StaticResource ListViewItemStyle}"
                          ItemTemplateSelector="{StaticResource Selector}"
                          HeaderTemplate="{StaticResource Header}">


                </ListView>

               
                <Button Content="Przekaż"   Command="{x:Bind ViewModel.CreateProposition}" CommandParameter="{x:Bind ViewModel.CanGoToSummary, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
